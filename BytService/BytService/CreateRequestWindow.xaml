        xmlns:local="clr-namespace:BytService"
        mc:Ignorable="d"
        Title="Создание заявки" Height="450" Width="800" MinHeight="300" MinWidth="450" MaxHeight="750" MaxWidth="1050">
    <Grid>
        <TextBox x:Name="TypeTextBox" Margin="146,117,20,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
